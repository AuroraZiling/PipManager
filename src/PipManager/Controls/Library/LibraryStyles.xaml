<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lang="clr-namespace:PipManager.Languages"
    xmlns:pages="clr-namespace:PipManager.Models.Pages">
    <Grid x:Key="LibraryDeletionWarningMsgBoxContent" VerticalAlignment="Top">
        <TextBlock
            VerticalAlignment="Top"
            FontSize="16"
            Foreground="Red"
            Text="{x:Static lang:Lang.Msgbox_Message_LibraryDeletionWarning}" />
        <ScrollViewer Margin="0,30,0,0" VerticalAlignment="Top">
            <ItemsControl x:Name="LibraryDeletionWarningMsgBoxContentListView">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type pages:LibraryListItem}">
                        <Grid>
                            <StackPanel Margin="7,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        Text="{Binding PackageName}" />
                                    <TextBlock FontSize="14" Text=" " />
                                    <ui:Badge
                                        Appearance="Primary"
                                        Content="{Binding PackageVersion}"
                                        FontSize="12" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</ResourceDictionary>