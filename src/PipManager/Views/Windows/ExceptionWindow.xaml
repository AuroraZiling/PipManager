<ui:FluentWindow
    x:Class="PipManager.Views.Windows.ExceptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:PipManager.Languages"
    xmlns:local="clr-namespace:PipManager.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ExceptionWindow"
    MinWidth="700"
    MinHeight="540"
    d:DataContext="{d:DesignInstance local:ExceptionWindow,
                                     IsDesignTimeCreatable=True}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ResizeMode="CanMinimize"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="{x:Static lang:Lang.ExceptionWindow_Title}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True"
            FontSize="14"
            ShowMaximize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon
                    Width="22"
                    Height="22"
                    Source="pack://application:,,,/Assets/icon.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <StackPanel
            Grid.Row="1"
            Margin="10"
            VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <ui:Badge Appearance="Danger" Content="Type" />
                <TextBlock
                    x:Name="TypeTextBlock"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Text="Unknown Type" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <ui:Badge Appearance="Caution" Content="Message" />
                <TextBlock
                    x:Name="MessageTextBlock"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Text="Unknown Message"
                    TextWrapping="WrapWithOverflow" />
            </StackPanel>
        </StackPanel>
        <Grid Grid.Row="2" Margin="10,0,10,10">
            <TextBlock HorizontalAlignment="Left" Text="Stack Trace" />
            <TextBox
                x:Name="StackTraceTextBox"
                Margin="0,27,0,35"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="12"
                IsReadOnly="True" />
            <ui:Button
                x:Name="ReportButton"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Appearance="Primary"
                Click="ReportButton_OnClick"
                Content="Report to Github Issue"
                Icon="{ui:SymbolIcon Bug24}" />
        </Grid>
    </Grid>
</ui:FluentWindow>